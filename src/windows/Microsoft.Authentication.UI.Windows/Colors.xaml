<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Microsoft.Authentication.UI">

    <Color x:Key="Hyperlink">#0E70C0</Color>
    <Color x:Key="HyperlinkHover">#3399FF</Color>
    <Color x:Key="HyperlinkDisabled">lightgray</Color>

    <Color x:Key="TextBoxBackground">#FCFCFC</Color>
    <Color x:Key="TextBoxText">#1E1E1E</Color>
    <Color x:Key="TextBoxBorder">#8591A2</Color>

    <Color x:Key="TextBoxBackgroundFocused">#FCFCFC</Color>
    <Color x:Key="TextBoxTextFocused">#1E1E1E</Color>
    <Color x:Key="TextBoxBorderFocused">#E5C365</Color>

    <SolidColorBrush x:Key="HyperlinkBrush" Color="{DynamicResource Hyperlink}" />
    <SolidColorBrush x:Key="HyperlinkHoverBrush" Color="{DynamicResource HyperlinkHover}" />
    <SolidColorBrush x:Key="HyperlinkDisabledBrush" Color="{DynamicResource HyperlinkDisabled}" />

</ResourceDictionary>
