      <SubType>Code</SubType>
    </Compile>
    <Compile Update="Controls\HorizontalShadowDivider.axaml.cs">
      <DependentUpon>HorizontalShadowDivider.axaml</DependentUpon>
      <SubType>Code</SubType>
    </Compile>
    <Compile Update="Views\DeviceCodeView.axaml.cs">
      <DependentUpon>DeviceCodeView.axaml</DependentUpon>
      <SubType>Code</SubType>
    </Compile>
    <Compile Update="Views\DeviceCodeView.axaml.cs">
